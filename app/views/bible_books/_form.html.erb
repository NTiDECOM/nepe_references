<%= form_for @bible_book do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :name, t('form.bible_book.name') %>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.submit t('form.bible_book.submit'), class: "button expand" %>
    </div>
  </div>
<% end %>
