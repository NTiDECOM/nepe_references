<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to t('app.name'), root_path %></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class="active"><%= link_to raw("<i class='fi-magnifying-glass'></i> " + t('navbar.search')), "/search" %></li>
      <% if user_signed_in? %>
      <li class="has-dropdown">
        <a href="#"><%= image_tag(current_user.avatar, size: "32x32", class: "avatar-navbar") %><%= current_user.name %></a>
        <ul class="dropdown">
          <li><%= link_to(t('navbar.edit_profile'), edit_user_registration_path) %></li>
          <li class="active"><%= link_to(t('navbar.logout'), destroy_user_session_path, :method => :delete) %></li>
        </ul>
      </li>
      <% else %>
      <li><%= link_to t('navbar.login'), new_session_path("user") %></li>
      <% end %>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      <% if user_signed_in? %>
      <li><%= link_to t('navbar.bible_books'), bible_books_path %></li>
      <li><%= link_to t('navbar.references'), references_path %></li>
      <% end %>
    </ul>
  </section>
</nav>
